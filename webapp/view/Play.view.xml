<mvc:View controllerName="com.belote.controller.Play" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Page class="playMat">
		<customHeader>
			<Bar>
				<contentLeft>
					<Button icon="sap-icon://message-information" press="handleScorePopoverPress"></Button>
				</contentLeft>
				<contentRight>
					<HBox visible="{path : 'localModel>/PlayTable/Atout', formatter: '.formatter.getAtoutVisible'}">
						<Text text="Atout : " class="sapUiTinyMarginEnd"></Text>
						<core:Icon color="{path : 'localModel>/PlayTable/Atout', formatter: '.formatter.getAtoutIconColor'}"
							src="{path : 'localModel>/PlayTable/Atout', formatter: '.formatter.getAtoutIcon'}" tooltip="Atout" class="sapUiTinyMarginEnd"></core:Icon>
					</HBox>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<HBox width="100%" height="100%">
				<VBox width="25%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
					<Text text="{localModel>/PlayTable/NPlayers/0/Name}" class="playerName"/>
					<HBox items="{localModel>/PlayTable/NPlayers/0/NCards}">
						<VBox width="10%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
							<VBox width="100px" height="60px" visible="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getNonEmpty'}">
								<HBox width="50px" height="15px" justifyContent="SpaceBetween">
									<core:Icon src="{parts:[{path: 'localModel>Name'}], formatter: 'com.belote.util.ClassFormatter.getCardColor'}"
										class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
									<core:Icon src="sap-icon://accept" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
								</HBox>
								<HBox width="50px" height="45px" justifyContent="Center" alignContent="Center" alignItems="Center">
									<Text text="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getCardValue'}"/>
								</HBox>
							</VBox>
						</VBox>
					</HBox>
				</VBox>
				<VBox width="50%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
					<VBox width="100%" height="20%" justifyContent="Center" alignContent="Center" alignItems="Center">
						<Text text="{localModel>/PlayTable/NPlayers/1/Name}" class="playerName"/>
						<HBox items="{localModel>/PlayTable/NPlayers/1/NCards}">
							<VBox width="10%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
								<VBox width="100px" height="60px" visible="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getNonEmpty'}">
									<HBox width="50px" height="15px">
										<core:Icon src="{parts:[{path: 'localModel>Name'}], formatter: 'com.belote.util.ClassFormatter.getCardColor'}"
											class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
										<core:Icon src="sap-icon://accept" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
									</HBox>
									<HBox width="50px" height="45px" justifyContent="Center" alignContent="Center" alignItems="Center">
										<Text text="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getCardValue'}"/>
									</HBox>
								</VBox>
							</VBox>
						</HBox>
					</VBox>
					<VBox width="100%" height="80%" justifyContent="Center" alignContent="Center" alignItems="Center">
						<core:Fragment fragmentName="com.belote.fragment.playCard" type="XML"/>
					</VBox>
					<VBox width="100%" height="20%" justifyContent="Center" alignContent="Center" alignItems="Center">
						<Text text="{localModel>/PlayTable/NPlayers/3/Name}" class="playerName"/>
						<HBox items="{localModel>/PlayTable/NPlayers/3/NCards}">
							<VBox width="10%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
								<VBox width="100px" height="60px" visible="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getNonEmpty'}">
									<HBox width="50px" height="15px">
										<core:Icon src="{parts:[{path: 'localModel>Name'}], formatter: 'com.belote.util.ClassFormatter.getCardColor'}"
											class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
										<core:Icon src="sap-icon://accept" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
									</HBox>
									<HBox width="50px" height="45px" justifyContent="Center" alignContent="Center" alignItems="Center">
										<Text text="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getCardValue'}"/>
									</HBox>
								</VBox>
							</VBox>
						</HBox>
					</VBox>
				</VBox>
				<VBox width="25%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
					<Text text="{localModel>/PlayTable/NPlayers/2/Name}" class="playerName"/>
					<HBox items="{localModel>/PlayTable/NPlayers/2/NCards}">
						<VBox width="10%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
							<VBox width="100px" height="60px" visible="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getNonEmpty'}">
								<HBox width="50px" height="15px">
									<core:Icon src="{parts:[{path: 'localModel>Name'}], formatter: 'com.belote.util.ClassFormatter.getCardColor'}"
										class="sapUiTinyMarginBegin sapUiTinyMarginTop"/>
									<core:Icon src="sap-icon://accept" class="sapUiTinyMarginEnd sapUiTinyMarginTop"/>
								</HBox>
								<HBox width="50px" height="45px" justifyContent="Center" alignContent="Center" alignItems="Center">
									<Text text="{parts:[{path: 'localModel>Name'}], formatter: '.formatter.getCardValue'}"/>
								</HBox>
							</VBox>
						</VBox>
					</HBox>
				</VBox>
			</HBox>
		</content>
	</Page>
</mvc:View>