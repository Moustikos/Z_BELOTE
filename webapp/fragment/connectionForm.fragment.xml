<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<HBox width="50%" height="50%" alignContent="Start" alignItems="Start" justifyContent="Center">
		<f:Form width="100%" editable="true">
			<f:layout>
				<f:ResponsiveGridLayout adjustLabelSpan="false" singleContainerFullSize="true" labelSpanL="3" columnsM="3" labelSpanM="3" labelSpanS="12"/>
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement>
							<f:label>
								<Label text="Email address" design="Bold"/>
							</f:label>
							<f:fields>
								<Input id="idInputEmailUser" type="Email">
									<layoutData>
										<l:GridData span="XL12 L12 M12 S12"/>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:label>
								<Label text="Password" design="Bold"/>
							</f:label>
							<f:fields>
								<Input id="idInputPasswordUser" type="Password" submit="onLogin">
									<layoutData>
										<l:GridData span="XL12 L12 M12 S12"/>
									</layoutData>
								</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement>
							<f:fields>
								<Button text="Register" type="Default" press="onRegister">
									<layoutData>
										<l:GridData span="XL6 L6 M6 S6"/>
									</layoutData>
								</Button>
								<Button text="Login" type="Emphasized" press="onLogin">
									<layoutData>
										<l:GridData span="XL6 L6 M6 S6"/>
									</layoutData>
								</Button>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</HBox>
</core:FragmentDefinition>