<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f" xmlns:card="sap.f.cards">
	<Dialog title="{Name}" contentWidth="400px" draggable="true" resizable="true" id="idWaitingRoomDialog">
		<content>
			<f:Card class="sapUiMediumMargin" width="300px">
				<f:header>
					<card:Header title="Team 1"/>
				</f:header>
				<f:content>
					<VBox justifyContent="SpaceBetween">
						<HBox alignItems="Center" justifyContent="SpaceBetween">
							<List showSeparators="None">
								<CustomListItem visible="{path: 'NPlayers/0', formatter: '.formatter.getPlayerVisible'}">
									<HBox alignItems="Center" justifyContent="SpaceBetween">
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Title level="H3" text="{NPlayers/0/Name}"/>
										</VBox>
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Button text="Leave" press="onLeaveTeam" visible="{path: 'NPlayers/0', formatter: '.formatter.getLeaveButtonVisible'}"/>
										</VBox>
									</HBox>
								</CustomListItem>
								<CustomListItem visible="{path: 'NPlayers/2', formatter: '.formatter.getPlayerVisible'}">
									<HBox alignItems="Center" justifyContent="SpaceBetween">
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Title level="H3" text="{NPlayers/2/Name}"/>
										</VBox>
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Button text="Leave" press="onLeaveTeam" visible="{path: 'NPlayers/2', formatter: '.formatter.getLeaveButtonVisible'}"/>
										</VBox>
									</HBox>
								</CustomListItem>
							</List>
						</HBox>
						<HBox justifyContent="Center">
							<Button text="Join" press="onJoinTeam1" enabled="{path: 'NPlayers', formatter: '.formatter.getJoinButtonTeam1Enabled'}"/>
						</HBox>
					</VBox>
				</f:content>
			</f:Card>
			<f:Card class="sapUiMediumMargin" width="300px">
				<f:header>
					<card:Header title="Team 2"/>
				</f:header>
				<f:content>
					<VBox justifyContent="SpaceBetween">
						<HBox alignItems="Center" justifyContent="SpaceBetween">
							<List showSeparators="None">
								<CustomListItem visible="{path: 'NPlayers/1', formatter: '.formatter.getPlayerVisible'}">
									<HBox alignItems="Center" justifyContent="SpaceBetween">
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Title level="H3" text="{NPlayers/1/Name}"/>
										</VBox>
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Button text="Leave" press="onLeaveTeam" visible="{path: 'NPlayers/1', formatter: '.formatter.getLeaveButtonVisible'}"/>
										</VBox>
									</HBox>
								</CustomListItem>
								<CustomListItem visible="{path: 'NPlayers/3', formatter: '.formatter.getPlayerVisible'}">
									<HBox alignItems="Center" justifyContent="SpaceBetween">
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Title level="H3" text="{NPlayers/3/Name}"/>
										</VBox>
										<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
											<Button text="Leave" press="onLeaveTeam" visible="{path: 'NPlayers/3', formatter: '.formatter.getLeaveButtonVisible'}"/>
										</VBox>
									</HBox>
								</CustomListItem>
							</List>
						</HBox>
						<HBox justifyContent="Center">
							<Button text="Join" press="onJoinTeam2" enabled="{path: 'NPlayers', formatter: '.formatter.getJoinButtonTeam2Enabled'}"/>
						</HBox>
					</VBox>
				</f:content>
			</f:Card>
		</content>
		<buttons>
			<Button text="Close" press="onPressCloseTable"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>