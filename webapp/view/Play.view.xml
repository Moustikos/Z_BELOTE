<mvc:View controllerName="com.belote.controller.Play" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Page showHeader="false" class="playMat">
		<content>
			<HBox width="100%" height="100%">
				<VBox width="25%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
					<Text text="{localModel>/PlayTable/NPlayers/0/ID}" class="playerName"/>
				</VBox>
				<VBox width="50%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
					<VBox width="100%" height="20%" justifyContent="Center" alignContent="Center" alignItems="Center">
						<Text text="{localModel>/PlayTable/NPlayers/1/ID}" class="playerName"/>
					</VBox>
					<VBox width="100%" height="80%" justifyContent="Center" alignContent="Center" alignItems="Center">
						<core:Fragment fragmentName="com.belote.fragment.playCard" type="XML" />
					</VBox>
					<VBox width="100%" height="20%" justifyContent="Center" alignContent="Center" alignItems="Center">
						<Text text="{localModel>/PlayTable/NPlayers/2/ID}" class="playerName"/>
					</VBox>
				</VBox>
				<VBox width="25%" height="100%" justifyContent="Center" alignContent="Center" alignItems="Center">
					<Text text="{localModel>/PlayTable/NPlayers/3/ID}" class="playerName"/>
					<Button icon="sap-icon://customfont/coeur" type="Reject"/>
					<Button icon="sap-icon://customfont/carreau"/>
					<Button icon="sap-icon://customfont/trefle"/>
					<Button icon="sap-icon://customfont/pique"/>
				</VBox>
			</HBox>
		</content>
	</Page>
</mvc:View>