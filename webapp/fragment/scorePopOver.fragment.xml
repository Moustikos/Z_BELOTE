<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable">
	<Popover title="Info" class="sapUiResponsivePadding--header sapUiResponsivePadding--footer" placement="Bottom">
		<HBox>
			<VBox>
				<Table class="custom-sapMLIBShowSeparator" width="300px" id="idScoreTable" inset="true">
					<columns>
						<Column width ="100px">
							<Text text="Team"/>
						</Column>
						<Column width ="100px">
							<Text text="Score"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="Team 1"/>
								<Text text="{NTeams/0/Score}"/>
							</cells>
						</ColumnListItem>
						<ColumnListItem>
							<cells>
								<Text text="Team 2"/>
								<Text text="{NTeams/1/Score}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</HBox>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button id="close" text="Close" press="handleCloseScorePress"/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>