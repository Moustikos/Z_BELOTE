<mvc:View controllerName="com.belote.controller.Home" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m">
	<Page>
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="Belote"/>
				</contentMiddle>
				<contentRight>
					<Button text="play" press="onPressPlay" />
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<HBox width="100%" height="100%" alignContent="Center" alignItems="Center" justifyContent="Center" visible="{parts:[{path: 'localModel>/isUserRegistered'}], formatter: '.formatter.getConnectionScreenVisible'}">
				<core:Fragment fragmentName="com.belote.fragment.connectionForm" type="XML" />
			</HBox>
			<HBox width="100%" height="100%" visible="{localModel>/isUserRegistered}" class="tapisCarte">
				<core:Fragment fragmentName="com.belote.fragment.gameScreen" type="XML" />
			</HBox>
		</content>
	</Page>
</mvc:View>